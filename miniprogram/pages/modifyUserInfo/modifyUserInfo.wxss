page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 100%;
  margin-bottom: 450rpx;
}


.avatar-wrapper {
  padding: 0;
  width: 68px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 68px;
  height: 68px;
}

.nickname-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;  
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.confirm-button{
  margin-top: 150rpx;
}