.alert{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin: auto;
  font-size: 55rpx;
  font-weight: bold;
  color: rgba(128, 128, 128, 0.8);
}
.title{
  display: flex;
  justify-content: center;
  font-size: 42rpx;
  font-weight: bold;
  margin: 0 20rpx;
  margin-top: 20rpx;
}
.market{
  margin: 10rpx 20rpx;
  border-bottom: 2rpx solid rgba(128, 128, 128, 0.1);
  font-size: x-large;
}